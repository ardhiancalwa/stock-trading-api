generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String   @map("full_name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  wallet       Wallet?
  watchlists   Watchlist[]
  portfolios   Portfolio[]
  transactions Transaction[]

  @@map("users")
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  balance   Decimal  @default(0) @db.Decimal(15, 2)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("wallets")
}

model Stock {
  symbol       String   @id
  companyName  String   @map("company_name")
  currentPrice Decimal  @map("current_price") @db.Decimal(15, 2)
  isDeleted    Boolean  @default(false) @map("is_deleted")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  watchlists   Watchlist[]
  portfolios   Portfolio[]
  transactions Transaction[]

  @@map("stocks")
}

model Watchlist {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  stockSymbol String   @map("stock_symbol")
  targetPrice Decimal? @map("target_price") @db.Decimal(15, 2)
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  stock Stock @relation(fields: [stockSymbol], references: [symbol], onDelete: Cascade)

  @@unique([userId, stockSymbol])
  @@map("watchlists")
}

model Portfolio {
  userId      String @map("user_id")
  stockSymbol String @map("stock_symbol")
  totalShares Int    @default(0) @map("total_shares")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  stock Stock @relation(fields: [stockSymbol], references: [symbol], onDelete: Cascade)

  @@id([userId, stockSymbol])
  @@map("portfolios")
}

model Transaction {
  id          String          @id @default(uuid())
  userId      String          @map("user_id")
  stockSymbol String          @map("stock_symbol")
  type        TransactionType
  quantity    Int
  price       Decimal         @db.Decimal(15, 2)
  total       Decimal         @db.Decimal(15, 2)
  createdAt   DateTime        @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  stock Stock @relation(fields: [stockSymbol], references: [symbol], onDelete: Cascade)

  @@map("transactions")
}

enum TransactionType {
  BUY
  SELL
}
